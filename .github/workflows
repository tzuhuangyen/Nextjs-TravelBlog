name: Deploy to GitHub Pages

on:
  push:
    branches:
      - main # 或者您的默认分支名称，如 master

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v3

      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18' # 使用与您项目兼容的 Node.js 版本

      - name: Install dependencies
        run: npm ci

      - name: Build
        run: npm run build

      - name: Deploy
        uses: JamesIves/github-pages-deploy-action@v4
        with:
          folder: out # Next.js 静态导出的默认目录
          branch: gh-pages
